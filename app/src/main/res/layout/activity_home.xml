<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_home"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:paddingTop="5dp"
             android:id="@+id/lin_home"
             android:orientation="horizontal"
             >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/homicon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Engifest"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            />
         </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingTop="5dp"
                android:id="@+id/lin_event"
                android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/events"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingTop="5dp"
            android:id="@+id/lin_place"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/places"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Places"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                />
            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingTop="5dp"
                android:id="@+id/lin_schedule"
                android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/timer"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                />
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4e4e4a"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingTop="5dp"
                android:id="@+id/lin_sponsor"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/pepicon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sponsors"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="#4e4e4a"
              ></View>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingTop="5dp"
            android:id="@+id/lin_about"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/aboutus"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Engi"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                />
        </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
