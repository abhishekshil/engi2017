<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="134dp"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <!--<android.support.v4.widget.CircleImageView-->
            <!--android:layout_width="120dp"-->
            <!--android:layout_height="120dp"-->
            <!--android:id="@+id/photo_about"-->
            <!--android:src="@drawable/mohit"-->
            <!--/>-->
            <com.github.siyamed.shapeimageview.CircularImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:id="@+id/img"
                android:padding="2dp"
                android:layout_gravity="center"
                app:siBorderColor="#e53f3f"
                app:siBorderWidth="3dp"
                />
        <!--<ImageView-->
            <!--android:layout_width="130dp"-->
            <!--android:layout_height="130dp"-->
            <!---->
            <!--/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mohit Kumar"
                android:padding="2dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#000"
                android:id="@+id/about_card_name"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"></View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#e53f3f"
                android:padding="1dp"
                android:textSize="15dp"
                android:id="@+id/desig_about_card"
                android:text="Co-Head Android Development SD-DTU"
                />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_margin="5dp"
               >

               <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Contact"
                  android:textSize="10dp"
                  android:layout_marginTop="10dp"
                  />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="9818351018"
                   android:id="@+id/about_card_mob"
                   android:textColor="#000"
                   />
           </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>